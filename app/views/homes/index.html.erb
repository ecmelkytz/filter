<div ng-controller="ListController">
  <div class="categories" ng-controller="CategoryController">
    <div class="col-md-4">
      <center><h3>Kategoriler</h3></center>
      <span ng-repeat="category in categories">
        <div class="col-lg-12">
          <div class="btn-group btn-group-justified">
            <div ng-click="sendCategory(category)" class="btn btn-primary" style="padding:10px">{{category.name}}</div>
          </div>
        </div>
      </span>
      <div class="col-lg-12">
        <div class="btn-group btn-group-justified">
          <div ng-click="resetSearch()" class="btn btn-primary" style="padding:10px">Select All</div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <center><h3>Kategoriler (Checkbox)</h3></center>
      <label ng-repeat="category in categories">
        <input
          type="checkbox"
          name="selectedFruits[]"
          value="{{category}}"
          ng-checked="selection.indexOf(category.id) > -1"
          ng-click="toggleSelection(category.id)"> {{category.name}}
      </label>
      <pre>{{selection|json}}</pre>
    </div>
  </div>

  <div class="col-md-8 col-md-offset-2">
    <br>
    <input ng-model="yaz" placeholder="Search..." class="form-control"/>
    <br>
    <div class="left" ng-controller="ItemController">
      <div class="itemList">
        <div class="panel panel-default" ng-repeat="item in items | filter:{category_id:search } | filter:yaz | filterWithOr:{category_id: selection}">
          <div class="panel-heading">
            <h4>{{item.title}}</h4>
          </div>
          <div class="panel-body">
            <p>{{item.description}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
